<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Favourites</title>
    <link rel="stylesheet" href="/stylesheets/output.css" />
  </head>
  <body class="bg-white">
    <%- include("../partials/header") %>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <h1 class="text-3xl font-semibold text-gray-900 mb-8">Favourite Homes</h1>
      <ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <% favourites.forEach((favourite) => { %>
        <li
          class="bg-white rounded-xl shadow-md overflow-hidden transition-transform hover:scale-105"
        >
          <img
            src="<%= favourite.houseImage %>"
            alt="House Image"
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900">
              <%= favourite.houseName %>
            </h3>
            <p class="text-gray-600 mt-1">
              Location: <%= favourite.location %>
            </p>
            <p class="text-gray-600 mt-1">
              Price: $<%= favourite.price %>/night
            </p>
            <div class="flex items-center mt-2">
              <span class="text-yellow-400 mr-1">â˜…</span>
              <span class="text-gray-700"><%= favourite.rating %></span>
            </div>
            <div class="flex gap-2">
              <button class="bg-amber-300 text-zinc-900 rounded-md p-2">
                Book
              </button>
              <form
                action="/delete-favourite/<%= favourite._id.toString() %>"
                method="POST"
              >
                <button
                  type="submit"
                  class="bg-red-600 border-2 border-transparent p-2 text-zinc-900 rounded-md"
                >
                  Delete
                </button>
              </form>
            </div>
          </div>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
